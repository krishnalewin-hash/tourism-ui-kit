{
  "name": "tourism-ui-kit-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for Tourism UI Kit",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
