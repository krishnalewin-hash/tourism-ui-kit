    "test": "vitest"
  },
  "keywords": ["cloudflare", "workers", "tourism", "tours", "api"],
  "author": "Krishna Lewin",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.80.0",
    "vitest": "^1.6.0"
  }
