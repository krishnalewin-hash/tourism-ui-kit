{
  "name": "tourism-ui-kit",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:quote-request:js": "esbuild src/quote-request-form/js/quote-request.js --bundle --minify --format=iife --global-name=TourBooking --outfile=dist/quote-request-form.min.js",
    "build:quote-results:js": "esbuild src/quote-results-page/js/quote-results.js --bundle --minify --format=iife --global-name=QuoteResults --outfile=dist/quote-results-page.min.js",
    "build:quote-results:css": "postcss src/quote-results-page/css/quote-results.css -o dist/quote-results-page.min.css",
    "build:legacy:cards:js": "esbuild src/legacy/cards/js/widget.js --bundle --minify --format=iife --global-name=TourCards --outfile=dist/cards.min.js",
    "build:legacy:cards:css": "postcss src/legacy/cards/css/index-cards.css -o dist/cards.min.css",
    "build:legacy:detail:js": "esbuild src/legacy/tour-detail/js/detail.js --bundle --minify --format=iife --global-name=TourDetail --outfile=dist/tour-detail.min.js",
    "build:legacy:detail:css": "postcss src/legacy/tour-detail/css/detail.css -o dist/tour-detail.min.css",
    "build:legacy:booking:js": "esbuild src/legacy/booking/js/booking.js --bundle --minify --format=iife --global-name=TourBooking --outfile=dist/booking.min.js",
    "build:legacy:booking:css": "postcss src/legacy/booking/css/booking.css -o dist/booking.min.css",
    "build:legacy:form-enhancer:js": "esbuild src/legacy/form-enhancer/js/enhancer.js --bundle --minify --format=iife --global-name=FormEnhancer --outfile=dist/form-enhancer.min.js",
    "build:legacy:simple-enhancer:js": "esbuild src/legacy/form-enhancer/js/simple-enhancer.js --bundle --minify --format=iife --global-name=SimpleFormEnhancer --outfile=dist/simple-form-enhancer.min.js",
    "build:legacy:client-enhancer:js": "esbuild src/legacy/form-enhancer/js/client-aware-enhancer.js --bundle --minify --format=iife --global-name=ClientFormEnhancer --outfile=dist/client-form-enhancer.min.js",
    "build": "npm run build:quote-request:js && npm run build:quote-results:js && npm run build:quote-results:css",
    "build:legacy": "npm run build:legacy:cards:js && npm run build:legacy:cards:css && npm run build:legacy:detail:js && npm run build:legacy:detail:css && npm run build:legacy:booking:js && npm run build:legacy:booking:css && npm run build:legacy:form-enhancer:js && npm run build:legacy:simple-enhancer:js && npm run build:legacy:client-enhancer:js",
    "build:all": "npm run build && npm run build:legacy",
    "dev": "npm run build && npx serve demo -l 5173 -s"
  },
  "devDependencies": {
    "cssnano": "^6.0.0",
    "esbuild": "^0.23.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0"
  }
}